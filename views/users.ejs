<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <% if (users.length> 0) { %>
        <ul>
            <% users.forEach(user=> { %>
                <li><strong>
                        <%= user.name %>
                    </strong> - <%= user.email %>
                </li>
                <% }) %>
        </ul>
        <% } else { %>
            <p>No users found.</p>
            <% } %>

                <h1>
                    <%= length %> users found.
                </h1>
</body>

</html>